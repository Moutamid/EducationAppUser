<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EducationAppUser" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/dark</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/blue</item>
    </style>

    <style name="Dialog">
        <item name="android:windowEnterAnimation">@animator/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@animator/slide_out_bottom</item>
    </style>

    <style name="Theme.EducationAppUser" parent="Base.Theme.EducationAppUser" />
</resources>